{{page-title this.pageTitle}}

<Results::Nav @scope={{this.scope}} @q={{this.q}} />

{{#unless (eq this.scope "all")}}
  <Header::Toolbar
    @docFacets={{this.model.docFacets}}
    @projectFacets={{this.model.projectFacets}}
    @scope={{this.scope}}
  />
{{/unless}}

<Results
  @docResults={{this.model.docResults}}
  @projectResults={{this.model.projectResults}}
  @productResults={{this.model.productResults}}
  @query={{this.q}}
/>
