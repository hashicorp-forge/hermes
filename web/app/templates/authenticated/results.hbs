{{page-title "Search Results"}}

{{! TODO: need a toggle to go between Projects/Docs/All }}

<LinkTo
  @route="authenticated.results"
  @query={{hash scope=this.allScope q=this.q page=1}}
>
  All
</LinkTo>
<LinkTo
  @route="authenticated.results"
  @query={{hash scope=this.projectsScope q=this.q page=1}}
>
  Projects
</LinkTo>
<LinkTo
  @route="authenticated.results"
  @query={{hash scope=this.docsScope q=this.q page=1}}
>
  Docs
</LinkTo>

