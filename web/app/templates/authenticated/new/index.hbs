{{page-title "New Doc"}}
<div class="maXXx-w-3xl mx-auto">

  <div class="relative flex shrink-0 items-center gap-3.5">
    <h1 class="text-center text-display-500">
      Choose a template
    </h1>
    <div class="hermes-h4 mt-[5px] mr-0.5">
      or
    </div>
    <Hds::Button
      @text="Start a project"
      @icon="chevron-right"
      @iconPosition="trailing"
      @color="secondary"
      class="mt-[4px]"
    />
  </div>
  <ol class="mt-8 grid auto-rows-fr grid-cols-2 gap-2">
    {{#each this.model as |docType|}}
      <li class="relative flex items-stretch">
        <LinkTo
          @route="authenticated.new.doc"
          @query={{hash docType=docType.name}}
          class="flex w-full items-stretch"
        >
          <Hds::Card::Container
            @level="mid"
            @levelHover="high"
            @hasBorder={{true}}
            class="group relative w-full px-[18px] pt-5 pb-6 transition-shadow"
          >
            <div class="flex w-full gap-3.5">
              <FlightIcon
                @size="24"
                @name={{or docType.icon (get-doctype-icon docType.name)}}
                class="relative z-10 -mt-1 shrink-0 text-color-foreground-action"
              />
              <div class="w-full">

                <div class="flex w-full items-start justify-between gap-2.5">
                  <h2
                    class="relative text-display-300 font-semibold leading-none text-color-foreground-strong"
                  >
                    {{docType.longName}}
                  </h2>
                  {{#unless (eq docType.longName docType.name)}}
                    <p
                      class="relative mt-px mr-2 shrink-0 text-body-200 leading-none text-color-foreground-disabled"
                    >
                      {{docType.name}}
                    </p>
                  {{/unless}}
                </div>
                <p
                  class="relative mt-1.5 max-w-[360px] text-body-300 text-color-foreground-faint"
                >
                  {{docType.description}}
                </p>
              </div>
            </div>
          </Hds::Card::Container>
        </LinkTo>
      </li>
    {{/each}}
  </ol>

  {{!-- {{#if this.moreInfoLinksAreShown}} --}}
  <div class="mt-12 max-w-md">
    <h3 class="mb-2 text-display-100 font-medium text-color-foreground-faint">
      Related links
    </h3>
    <ul class="grid gap-1">
      {{#each this.model as |docType|}}
        {{#if docType.moreInfoLink}}
          <li>
            <ExternalLink
              @iconIsShown={{true}}
              href={{docType.moreInfoLink.url}}
              class="relative inline-flex text-body-200 text-color-foreground-faint decoration-color-palette-neutral-200 hover:text-color-foreground-primary"
            >
              {{docType.moreInfoLink.text}}
            </ExternalLink>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
  {{!-- {{/if}} --}}
</div>
