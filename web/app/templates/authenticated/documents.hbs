{{page-title "All Docs"}}

<Header::Toolbar @facets={{this.model.facets}} />

{{#unless this.activeFilters.isEmpty}}
  <MatchCountHeadline
    data-test-filtered-doc-count
    @count={{this.model.results.nbHits}}
  />
{{/unless}}

<Documents::Table
  @docs={{this.model.results.hits}}
  @nbPages={{this.model.results.nbPages}}
  @currentPage={{(add (or this.model.results.page 0) 1)}}
  @sortDirection={{this.sortDirection}}
  @currentSort="createdTime"
/>
