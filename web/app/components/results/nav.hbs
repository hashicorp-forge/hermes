<div
  class="segmented-control flex w-[340px] items-center justify-end"
  ...attributes
>
  <LinkTo
    @route="authenticated.results"
    @query={{this.projectsQuery}}
    class="{{if (eq @scope this.projectsScope) 'active'}}"
  >
    Projects
  </LinkTo>

  <LinkTo
    @route="authenticated.results"
    @query={{this.docsQuery}}
    class="{{if (eq @scope this.docsScope) 'active'}}"
  >
    Docs
  </LinkTo>

  <LinkTo
    @route="authenticated.results"
    @query={{this.allQuery}}
    class="{{if (eq @scope this.allScope) 'active'}}"
  >
    Top
  </LinkTo>
</div>
