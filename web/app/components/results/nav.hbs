{{! TODO: this should take up space even if not there }}
<div
  class="active-filter-list mt-4 flex w-80 items-center justify-end"
  ...attributes
>
  <LinkTo
    @route="authenticated.results"
    @query={{this.projectsQuery}}
    class="active-filter-list-item
      {{if (eq @scope this.projectsScope) 'active'}}"
  >
    Projects
  </LinkTo>

  <LinkTo
    @route="authenticated.results"
    @query={{this.docsQuery}}
    class="active-filter-list-item {{if (eq @scope this.docsScope) 'active'}}"
  >
    Docs
  </LinkTo>

  <LinkTo
    @route="authenticated.results"
    @query={{this.allQuery}}
    class="active-filter-list-item {{if (eq @scope this.allScope) 'active'}}"
  >
    All
  </LinkTo>
</div>
