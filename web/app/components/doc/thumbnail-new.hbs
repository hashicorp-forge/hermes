<li
  class="flex items-start gap-3 border-t border-t-color-border-faint first:border-t-0"
>
  <a class="w-full py-3.5">
    <div class="relative flex w-full items-start gap-3">
      {{! Text }}
      <div class="w-full">

        <div class="flex items-center justify-between">
          <div class="flex w-full items-center justify-between gap-1.5">
            {{#if (eq @status "Draft")}}{{/if}}
            <div class="flex items-center gap-1">
              <Product::Avatar class="shrink-0" @product={{@product}} />
              <Person::Avatar
                class="shrink-0"
                F
                @size="small"
                @email=""
                @imgURL={{@avatarURL}}
              />
              <div
                class="ml-2 flex items-center gap-[7px] text-body-100 leading-none text-color-foreground-faint"
              >
                <span>
                  {{@docType}}
                </span>
                <span class="opacity-50">
                  |
                </span>
                <span class="tag {{dasherize @status}}">
                  {{@status}}
                </span>
              </div>
            </div>
          </div>
        </div>
        <h4 class="mt-1.5 mb-1 truncate text-body-200">
          {{@title}}
        </h4>
        <p class="text-body-100 text-color-foreground-faint">Modified 3 minutes
          ago</p>
      </div>
    </div>
  </a>
</li>
