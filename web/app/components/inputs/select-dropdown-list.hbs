<X::DropdownList
  @items={{@items}}
  @listIsOrdered={{@listIsOrdered}}
  @onItemClick={{@onItemClick}}
  @selected={{@selected}}
  @placement={{@placement}}
  ...attributes
>
  <:anchor as |dd|>
    <dd.ToggleSelect @text={{or @selected "--"}}>
      {{yield to="anchor"}}
    </dd.ToggleSelect>
  </:anchor>
  <:item as |dd|>
    {{yield dd to="item"}}
  </:item>
</X::DropdownList>
