<form class="px-6 pb-6" {{on "submit" this.onSave}} ...attributes>
  <div class="mb-4">
    <Hds::Form::TextInput::Field
      {{on "input" @updateFormValues}}
      @value={{@title}}
      placeholder="Enter a title"
      required={{true}}
      name="title"
      class="external-resource-title-input"
      as |F|
    >
      <F.Label>Title</F.Label>
      {{#if @titleErrorIsShown}}
        <F.Error class="mt-3 mb-3" data-test-external-resource-title-error>
          A title is required.
        </F.Error>
      {{/if}}
    </Hds::Form::TextInput::Field>
  </div>
  <Hds::Form::TextInput::Field
    data-test-external-resource-url-input
    {{on "input" @updateFormValues}}
    @value={{@url}}
    required={{true}}
    name="url"
    as |F|
  >
    <F.Label>URL</F.Label>
    {{#unless @urlIsValid}}
      <F.Error class="mt-3">
        A valid URL is required.
      </F.Error>
    {{/unless}}
  </Hds::Form::TextInput::Field>
  {{! This adds enter-to-submit functionality }}
  <input type="submit" class="hidden" />
</form>
