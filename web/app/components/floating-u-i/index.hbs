{{yield this to="anchor"}}

{{#if this.contentIsShown}}
  <FloatingUI::Content
    @placement={{@placement}}
    @renderOut={{@renderOut}}
    @anchor={{this.anchor}}
    @content={{this.content}}
    @id={{this.contentID}}
    @registerContent={{this.registerContent}}
    ...attributes
  >
    {{!-- TODO: Make this yield more --}}
    {{yield this to="content"}}
  </FloatingUI::Content>
{{/if}}
