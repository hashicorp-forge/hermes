<My::Header
  @toggleOwnerFilter={{this.toggleOwnerFilter}}
  @toggleOwnerFilterIsShown={{this.toggleOwnerFilterIsShown}}
/>

{{#if @docs}}
  <table class="hds-table mt-7">
    <thead>
      <tr>
        <th class="name">Name</th>
        <th class="type">Type</th>
        <th class="status">Status</th>
        <th class="product">Product/Area</th>
        <th class="owner">Owner</th>
        <th class="time">
          <Table::SortableHeader
            @onSort={{this.onSort}}
            @attribute="modifiedTime"
            @currentSort="modifiedTime"
            @sortDirection={{this.sortDirection}}
          >
            Last modified
          </Table::SortableHeader>
        </th>
      </tr>
    </thead>
    {{#each this.docGroups as |docs i|}}
      {{#if docs.length}}
        <tbody class="">
          {{#if (eq this.docGroups.length 2)}}
            <tr>
              <th colspan="6" class="hermes-h4 pt-24">
                {{if (eq i 1) "More than 30 days old" "Recently active"}}
              </th>
            </tr>
          {{/if}}
          {{#each docs as |doc|}}
            <Table::Row @doc={{doc}} @timeColumn="modifiedTime" />
          {{/each}}
        </tbody>
      {{/if}}
    {{/each}}
  </table>

  {{! Maybe we don't show docs older than 1 year old by default }}

  {{#if this.loadMoreDocsButtonIsShown}}
    {{! should this happen when scrolled into view? }}
    <Action
      {{on "click" this.loadMoreDocs}}
      class="mt-4 flex items-center gap-1.5 text-center text-body-200 text-color-foreground-action hover:text-color-foreground-action-hover"
    >
      <FlightIcon @name={{if this._loadMoreDocs.isRunning "loading" "plus"}} />
      {{if this._loadMoreDocs.isRunning "Loading..." "Load more"}}
    </Action>
  {{/if}}
{{else}}
  <div
    class="mt-7 flex h-64 items-center justify-center text-display-300 text-color-foreground-faint"
  >
    You don't have any docs yet.
  </div>
{{/if}}
