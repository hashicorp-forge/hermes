<My::SubNav @toggleOwnerFilter={{this.toggleOwnerFilter}} />

{{#if @docs}}
  <table class="hds-table my-docs">
    <thead>
      <tr>
        <th class="name">Name</th>
        <th class="type">Type</th>
        <th class="status">Status</th>
        <th class="product">Product/Area</th>
        <th class="owner">Owner</th>
        <th class="modified">
          <Table::SortableHeader
            @onSort={{this.onSort}}
            @attribute="modifiedTime"
            @currentSort="modifiedTime"
            @sortDirection={{this.sortDirection}}
          >
            Last modified
          </Table::SortableHeader>
        </th>
      </tr>
    </thead>
    {{#each this.docGroups as |docs i|}}
      {{#if docs.length}}
        <tbody class="">
          {{#if (eq this.docGroups.length 2)}}
            <tr>
              <th colspan="6" class="hermes-h4 pt-24">
                {{if (eq i 1) "More than 30 days old" "Recently active"}}
              </th>
            </tr>
          {{/if}}
          {{#each docs as |doc|}}
            <Table::Row @doc={{doc}} @timeColumn="modifiedTime" />
          {{/each}}
        </tbody>
      {{/if}}
    {{/each}}
  </table>
{{else}}
  {{! TODO }}
{{/if}}
