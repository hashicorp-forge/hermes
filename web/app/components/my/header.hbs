<div class="flex items-center justify-between">
  <div class="relative flex items-center gap-5">
    <Person::Avatar
      @imgURL={{this.userImgURL}}
      @email={{this.userName}}
      @size="xl"
      class="-ml-0.5"
    />
    <div>
      <h1 class="text-display-300">
        {{this.userName}}
      </h1>
      <p class="mt-0.5 text-body-200 text-color-foreground-faint">
        {{this.userEmail}}
      </p>
    </div>
  </div>
  {{#if @toggleOwnerFilterIsShown}}
    <LinkTo
      @route={{this.currentRoute}}
      @query={{this.ownerFilterQueryParams}}
      class="flex items-center gap-3 text-body-100 text-color-foreground-faint"
    >
      {{! this should toggle the query params }}
      <label for="owner-filter" class="text-body-200">
        Include drafts I'm a contributor on
      </label>
      <Hds::Form::Toggle::Base
        id="owner-filter"
        checked={{this.ownerToggleIsChecked}}
      />
    </LinkTo>
  {{/if}}
</div>
