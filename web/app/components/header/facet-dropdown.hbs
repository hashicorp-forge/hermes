<Hds::Dropdown
  class="facets-dropdown"
  @listPosition="left"
  ...attributes
  as |dd|
>
  <dd.ToggleButton
    data-test-facets-dropdown-toggle-button
    @text={{@label}}
    @color="secondary"
    disabled={{@disabled}}
  />
  {{#if @facets}}
    {{#each-in this.firstTenFacets as |value attrs|}}
      <dd.Interactive
        class="facet-interactive-item {{if attrs.selected 'checked'}}"
        @route={{this.currentRouteName}}
        @query={{get-query-hash @label value attrs.selected}}
        @text="{{value}} ({{attrs.count}})"
        @icon={{if attrs.selected "check-square-fill" "square"}}
      />
    {{/each-in}}
  {{/if}}
</Hds::Dropdown>
