<X::Hds::DropdownList @items={{@facets}} @listIsOrdered={{true}}>
  <:anchor as |dd|>
    <dd.ToggleButton @text={{@label}} />
  </:anchor>
  <:item as |dd|>
    <dd.LinkTo
      @route={{this.currentRouteName}}
      @query={{get-facet-query-hash @label dd.value dd.attrs.selected}}
    >
      <X::Hds::DropdownList::CheckableItem
        @value={{dd.value}}
        @count={{dd.attrs.count}}
        @selected={{dd.attrs.selected}}
      />
    </dd.LinkTo>
  </:item>
</X::Hds::DropdownList>
