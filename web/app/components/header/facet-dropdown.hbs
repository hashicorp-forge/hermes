<X::DropdownList
  @items={{@facets}}
  @listIsOrdered={{true}}
  @offset={{hash mainAxis=3 crossAxis=-5}}
  @renderOut={{true}}
  class="facet-dropdown-popover"
  ...attributes
>
  <:anchor as |dd|>
    <dd.ToggleButton
      data-test-facet-dropdown-toggle
      data-test-facet={{dasherize @label}}
      class="focus:z-10 focus-visible:z-10 active:z-10
        {{if this.positionIsLeft 'rounded-r-none'}}
        {{if this.positionIsCenter 'rounded-none border-l-0'}}
        {{if this.positionIsRight 'rounded-l-none border-l-0'}}
        "
      @text={{@label}}
      disabled={{@disabled}}
    />
  </:anchor>
  <:item as |dd|>
    <dd.LinkTo
      data-test-facet-dropdown-link
      @route={{this.currentRouteName}}
      @query={{get-facet-query-hash @label dd.value dd.attrs.isSelected}}
    >
      <X::DropdownList::CheckableItem
        @value={{dd.value}}
        @count={{dd.attrs.count}}
        @isSelected={{dd.attrs.isSelected}}
      />
    </dd.LinkTo>
  </:item>
</X::DropdownList>
