<li class="project-tile" ...attributes>
  <LinkTo @route="authenticated.project" @model={{@project.id}} class="hover">
    <Hds::Card::Container
      @hasBorder={{true}}
      class="p-4 h-48"
      @levelHover="mid"
    >
      <div class="relative h-full pb-16">
        <div class="flex items-start justify-between">
          <div class="w-full">
            <Action class="float-right top-0 outline">
              <FlightIcon @name="pin" />
            </Action>
            <h3
              class="float-none text-display-300 font-semibold text-color-foreground-strong"
            >
              {{@project.name}}
            </h3>
            {{#if @project.description}}
              <p class="mt-1 text-body-300 text-color-foreground-faint">
                {{@project.description}}
              </p>
            {{/if}}
          </div>
          {{!-- {{#if this.documents}}
            <span class="ml-2 flex gap-2 shrink-0 items-center">
              {{this.documents.length}}
              <FlightIcon @name="files" class="ext-color-foreground-disabled" />
            </span>
          {{/if}} --}}
        </div>

        {{#if this.productAreas}}
          {{! TODO: truncation }}
          <ul class="absolute left-0 bottom-0 flex">
            {{#each this.productAreas as |productArea|}}
              <li class="flex items-center">
                <ProductAvatar
                  {{tooltip productArea}}
                  @productArea={{productArea}}
                />
              </li>
            {{/each}}
          </ul>
        {{/if}}
        {{#if this.jiraObject}}
          <span
            class="absolute
              {{if (eq this.jiraObject.status 'Done') 'line-through'}}
              bottom-0 right-0 flex items-center gap-1.5 text-body-100 text-color-foreground-faint"
          >
            {{#if @project.jiraObject.type}}
              <div class="flex">
                <FlightIcon @name="square-fill" class="text-lime-600" />
              </div>
            {{/if}}
            {{this.jiraObject.key}}
          </span>
        {{/if}}
      </div>
    </Hds::Card::Container>
  </LinkTo>
</li>
