<div class="x-container mt-2 mb-4">

  <div class="relative mb-6">
    <div class="mb-3 flex items-center gap-2.5">
      <FlightIcon @name="pin" />
      <h3 class="text-body-200 font-semibold text-color-foreground-strong">
        Pinned
      </h3>
    </div>
    {{#if @projects}}
      <ol>

        {{#each (take 1 @projects) as |project|}}
          <li class="project-tile">
            <LinkTo @route="authenticated.project" @model={{project.id}}>
              <Hds::Card::Container
                @hasBorder={{true}}
                @levelHover="mid"
                class="p-4"
              >
                uhfdsa oh

              </Hds::Card::Container>
            </LinkTo>
          </li>
          {{!-- <Project::Tile @project={{project}} /> --}}
        {{/each}}
      </ol>
    {{/if}}
  </div>

  <div class="relative mb-6">
    <nav class="big-tabs flex space-x-3 mb-10 justify-center">

      <a class="flex items-center gap-2 pr-2.5 Xoutline outline-black/5 active">
        <FlightIcon @name="grid" class="ml-2 -mr-px" />
        <div>
          Active
        </div>
      </a>
      <a
        class="flex items-center gap-2 pr-2.5 Xoutline outline-black/5 Xactive"
      >
        <FlightIcon @name="check-circle" class="ml-2" />
        <div>
          Completed
        </div>
      </a>
      <a
        class="flex items-center gap-2 pr-2.5 Xoutline outline-black/5 Xactive"
      >
        <FlightIcon @name="archive" class="ml-2" />
        <div>
          Archived
        </div>
      </a>
    </nav>
    {{#if @projects}}
      <ol
        {{!-- {{did-insert this.configureMasonry}} --}}
        class="relative grid grid-cols-3 gap-2"
      >
        {{#each @projects as |project|}}
          <Project::Tile @project={{project}} />
        {{/each}}
        {{#each @projects as |project|}}
          <Project::Tile @project={{project}} />
        {{/each}}
        {{#each @projects as |project|}}
          <Project::Tile @project={{project}} />
        {{/each}}
      </ol>
    {{else}}
      {{! TODO: No projects state }}
    {{/if}}
  </div>

  <div class="mb-6">
    <div class="mb-3 flex items-center gap-2">
      <FlightIcon @name="check-circle" />
      <h3 class="text-body-200 font-semibold text-color-foreground-strong">
        Completed
      </h3>
    </div>
    {{#if @projects}}
      <ol class="grid">
        {{#each (take 3 @projects) as |project|}}
          <Project::Tile @project={{project}} />
        {{/each}}
      </ol>
    {{/if}}
  </div>

  <div class="mb-6">
    <div class="mb-3 flex items-center gap-2">
      <FlightIcon @name="archive" />
      <h3
        class="text-body-200 font-semibold text-color-foreground-strong"
      >Archived</h3>
    </div>
  </div>
</div>
