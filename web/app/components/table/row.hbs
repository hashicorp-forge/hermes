<tr>
  <td class="name">
    <div class="inner h-full">
      <LinkTo
        @route="authenticated.document"
        @model="{{@doc.objectID}}"
        @query={{hash draft=(eq @doc.status "wip")}}
        class="flex h-full w-full gap-3.5 focus:outline-none
          {{unless @thumbnailIsShown 'items-center'}}"
      >
        {{#if @thumbnailIsShown}}
          <Doc::Thumbnail @product={{@doc.product}} @status={{@doc.status}} />
        {{else}}
          {{#let (get-product-id @doc.product) as |productID|}}
            <Product::Avatar
              @product={{@doc.product}}
              @icon={{unless productID "file-text"}}
            />
          {{/let}}
        {{/if}}
        <div class="relative overflow-hidden">
          <div class={{if @thumbnailIsShown "" "flex gap-1"}}>
            <h4
              class="hds-typography-body-200 hds-font-weight-semibold hds-foreground-strong
                {{unless @thumbnailIsShown 'truncate'}}"
            >
              {{@doc.title}}
            </h4>
            {{#if @doc.docNumber}}
              {{#if (or @thumbnailIsShown (not (eq @doc.status "WIP")))}}
                <div
                  class="whitespace-nowrap
                    {{if
                      @thumbnailIsShown
                      'text-color-foreground-faint'
                      'font-semibold text-color-foreground-strong'
                    }}"
                >
                  {{@doc.docNumber}}
                </div>
              {{/if}}
            {{/if}}
          </div>
        </div>
      </LinkTo>
    </div>
  </td>

  <td class="type">
    <div class="inner">
      {{@doc.docType}}
    </div>
  </td>

  <td class="status">
    <div class="inner">
      <Doc::State @state={{@doc.status}} @hideProgress={{true}} />
    </div>
  </td>

  <td class="product">
    <div class="inner">
      <div class="truncate">
        {{@doc.product}}
      </div>
    </div>
  </td>

  <td class="owner">
    <div class="inner">
      <Person
        @imgURL={{get @doc.ownerPhotos 0}}
        @email="{{get @doc.owners 0}}"
      />
    </div>
  </td>

  <td class="time">
    <div class="inner">
      <div
        class={{if (eq this.time "Unknown") "text-color-foreground-disabled"}}
      >
        {{this.time}}
      </div>
    </div>
  </td>
</tr>
