<LinkTo
  @route="authenticated.product-areas"
  @model={{dasherize @product}}
  class="product-link"
  ...attributes
>
  {{#if (has-block "default")}}
    {{yield}}
  {{else}}
    <Hds::Badge
      @icon={{or this.productAreaName "folder"}}
      @text={{or this.productAreaName @product}}
      title={{or this.productAreaName @product}}
    />
  {{/if}}
</LinkTo>
