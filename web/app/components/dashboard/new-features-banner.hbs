{{#if this.isShown}}
  <Hds::Alert
    data-test-new-features-banner
    @type="inline"
    @color="highlight"
    @icon="gift"
    @onDismiss={{this.dismiss}}
    class="mb-10"
    as |A|
  >
    <A.Title>Introducing Projects</A.Title>
    <A.Description>
      Organize documents and links around an effort.
      <LinkTo
        @route="authenticated.projects"
        class="underlined-link"
      >Browse</LinkTo>
      or
      <LinkTo @route="authenticated.new.project" class="underlined-link">start a
        project</LinkTo>
      of your own.
    </A.Description>
  </Hds::Alert>
{{/if}}
