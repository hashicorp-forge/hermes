<div class="mb-12 w-full">
  <div class="flex items-center">
    <div
      class="flex items-center gap-4 text-display-500 text-color-foreground-strong"
    >
      <h4
        class="bg-gradient-to-r from-color-foreground-strong to-color-foreground-primary bg-clip-text text-transparent"
      >
        Awaiting your review
      </h4>
      <span
        data-test-docs-awaiting-review-count
        class="-mt-1.5 -mb-2 rounded-r-full rounded-l-full bg-gradient-to-tr from-color-foreground-faint to-color-foreground-disabled px-5 pt-1 pb-1.5 text-display-300 font-regular text-color-page-primary"
      >
        {{@docs.length}}
      </span>
    </div>
  </div>

  <ul class="mt-7">
    {{#each this.docsToShow as |doc|}}
      <Dashboard::DocsAwaitingReview::Doc @doc={{doc}} />
    {{/each}}
  </ul>
  {{#if this.toggleButtonIsShown}}
    <Action
      data-test-docs-awaiting-review-toggle
      {{on "click" this.toggleCollapsed}}
      class="mt-4 flex items-center text-center text-body-200 text-color-foreground-action hover:text-color-foreground-action-hover"
    >
      <FlightIcon
        data-test-docs-awaiting-review-toggle-icon
        @name={{if this.isCollapsed "plus" "minus"}}
        class="mr-1.5"
      />
      {{if this.isCollapsed "Show all" "Show fewer"}}
    </Action>
  {{/if}}
</div>
{{!
<div class="mt-8 -mb-[15px] flex h-12 w-full" aria-hidden="true">
  <div class="w-9/12 shrink-0 border-t border-t-color-border-primary"></div>
  <div class="-mr-px h-full w-12 shrink-0 overflow-hidden">
    <div
      class="relative left-[-4px] top-[-4.5px] h-40 w-40 origin-top-left rotate-45 border-t border-t-color-border-primary"
    ></div>
  </div>
  <div class="w-full border-b border-b-color-border-primary"></div>
</div>

 }}
