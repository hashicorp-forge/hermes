<Document::Sidebar::SectionHeader
  @title="Related resources"
  @buttonLabel="Add related resource"
  @buttonAction={{this.showAddResourceModal}}
/>

<Document::Sidebar::ResourceList @items={{this.relatedResourcesObjectEntries}}>
  <:resource as |r|>
    <Document::RelatedResources::ListItem
      @resource={{r}}
      @removeResource={{this.removeResource}}
      @editResource={{this.editResource}}
    />
  </:resource>
</Document::Sidebar::ResourceList>

{{#if this.addResourceModalIsShown}}
  <Document::RelatedResources::Add
    @onClose={{this.hideAddResourceModal}}
    @addRelatedExternalLink={{this.addRelatedExternalLink}}
    @addRelatedDocument={{this.addRelatedDocument}}
    @shownDocuments={{this.shownDocuments}}
    @objectID={{@objectID}}
    @relatedDocuments={{this.relatedDocuments}}
    @relatedLinks={{this.relatedLinks}}
    @allowAddingExternalLinks={{@allowAddingExternalLinks}}
    @search={{perform this.search}}
  />
{{/if}}
