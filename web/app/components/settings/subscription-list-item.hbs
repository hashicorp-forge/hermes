<li
  data-test-subscription-list-item
  class="flex w-full items-center justify-between py-2.5 px-2.5 hover:bg-color-page-faint"
>
  <LinkTo
    @route="authenticated.product-areas"
    @model={{dasherize @productArea}}
    class="underline-on-hover flex items-center gap-3"
  >
    <Product::Avatar @product={{@productArea}} @size="small" />
    <div data-test-subscription-list-item-name class="text-body-300">
      {{@productArea}}
    </div>
  </LinkTo>
  <Product::SubscriptionToggle @product={{@productArea}} @size="small" />
</li>
